<%= form_for(kezele) do |f| %>
  <% if kezele.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(kezele.errors.count, t('error')) %><%= t('treatment.cant_save')%></h2>

      <ul>
      <% kezele.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
  <%= f.text_field :name, type: 'text', placeholder:t('treatment.give_name'), class:'form-control', required:'required' %>
  </div>
  <div class="form-group">
     <%= f.text_field :minutes, type: 'integer', placeholder:t('treatment.give_minutes'), class:'form-control', required:'required' %>
  </div>
  <div class="form-group">
    <%= f.text_field :price, type: 'integer', placeholder:t('treatment.give_price'), class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_area :desc, size: '10x4', type: 'text', placeholder:t('treatment.give_desc'), class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit t('treatment.create'), class: "btn float-right login_btn" %>
  </div>
<% end %>
