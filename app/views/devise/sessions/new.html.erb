<div class="container-fluid login">

  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
        <h3><%= t('authenticate.login') %></h3>
      </div>
      <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-group form-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-user"></i></span>
          </div>
          <%= f.email_field :email, type: 'email', class: "form-control", placeholder: t('authenticate.email') %>
        </div>
        <div class="input-group form-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-key"></i></span>
          </div>
          <%= f.password_field :password, type: 'password', class: "form-control", placeholder: t('authenticate.password') %>
        </div>
        <div class="row align-items-center checkBox">
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label t('authenticate.remember') %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.submit t('authenticate.login'), class: "btn float-right login_btn" %>
        </div>
      <% end %>
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-center links">
          <%= t('authenticate.notmember') %> <a href="/<%= t('urls.sign_in') %>"><%= t('authenticate.register') %></a>
        </div>
        <div class="d-flex justify-content-center links">
          <%= t('authenticate.forgotpassword') %> <a href="#"><%= t('authenticate.remindme') %></a>
        </div>
      </div>
    </div>
  </div>
</div>